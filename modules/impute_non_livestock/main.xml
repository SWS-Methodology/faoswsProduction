<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<RScript xmlns="http://www.fao.org/rScript">
    <Name> Non-livestock Imputation </Name>
    <Description>
	  Create datasets which contains imputed values in order
	  to be filled-in in the imputation module. Note that this
	  module runs for ALL COUNTRIES and ALL COMMODITIES by default. 
	  Selecting session only restricts the commodities. 
	  The control file for this module is SUA/FBS Domain|fbs_production_comm_codes
	</Description>
    <Category>Imputation</Category>
    <Authors>
        <Author>
            <Name>Michael C. J. Kao</Name>
            <Mail>michael.kao@fao.org</Mail>
        </Author>
    </Authors>
    <Params>
        <Param xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="List">
            <Code>imputation_selection</Code>
            <Label>Perform Imputation on</Label>
            <Description>
			  Please specify the selection to perform imputation.
		  </Description>
            <Compulsory>true</Compulsory>
            <Options>
                <Option>
                    <Label> Selected session </Label>
                    <Value>session</Value>
                </Option>
                <Option>
                    <Label> All Production Data </Label>
                    <Value>all</Value>
                </Option>
            </Options>
        </Param>
        <Param xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="Number">
            <Code>startWrite</Code>
            <Label>Write only years from</Label>
            <Description>Years which, regardless of imputation, are written. Must be not be before start of imputation range.</Description>
            <Compulsory>false</Compulsory>
            <Min>1960</Min>
            <Max>2050</Max>
        </Param>
        <Param xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:type="Number">
            <Code>endWrite</Code>
            <Label>Write only years to</Label>
            <Description>Years which, regardless of imputation, are written. Must be not be before start of imputation range.</Description>
            <Compulsory>false</Compulsory>
            <Min>1960</Min>
            <Max>2050</Max>
        </Param>
    </Params>
    <Datasets>
        <MainDataset>
            <Code>aproduction</Code>
            <SelectableDimensions>
                <SelectableDimension compulsory="true">geographicAreaM49</SelectableDimension>
                <SelectableDimension compulsory="true">measuredItemCPC</SelectableDimension>
                <SelectableDimension compulsory="true">measuredElement</SelectableDimension>
                <SelectableDimension compulsory="true">timePointYears</SelectableDimension>
            </SelectableDimensions>
        </MainDataset>
    </Datasets>
    <InteractiveValidation>false</InteractiveValidation>
    <Background>false</Background>
</RScript>
